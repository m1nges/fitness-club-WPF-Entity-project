<Window x:Class="fitness_club.Windows.AuthorizationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
        Background="{StaticResource GlobalPageBackground}">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#E0E0F8" BorderBrush="#8A2BE2" BorderThickness="2" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Стиль для Button -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#7B68EE" BorderBrush="#8A2BE2" BorderThickness="2" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock TextAlignment="Center" 
               Text="Добро пожаловать" 
               FontSize="28"
               FontWeight="Bold"
               Margin="0 50 0 0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock TextAlignment="Center"
               Margin="0 20 0 10"
               Text="Введите логин" 
               FontSize="18"        
               Width="190"
               Height="30"/>

            <TextBox   x:Name="loginTb"
               Margin="0 0 0 10"
               Width="190" 
               Height="30"/>

            <TextBlock TextAlignment="Center"
               Text="Введите пароль" 
               FontSize="18"        
               Width="190"
               Height="30"/>

            <TextBox   x:Name="passwordTb"
               Width="190" 
               Height="30"/>

            <Button x:Name="enterBtn"
            Content="Войти"
            Width="190" 
            Height="40"
            Margin="0 20 0 0"
            Click="enterBtn_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3"
    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center"
            Text="Нет аккаунта?" 
            FontSize="14"        
            Width="190"
            Margin="0 10 0 0"
            Height="20"/>

            <Button x:Name="registrationWinOpenBtn"
            Content="Зарегистрироваться"
            Width="160" 
            Height="30"
            Margin="0 5 0 0"
            Click="registrationWinOpenBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
