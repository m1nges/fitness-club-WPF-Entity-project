<Window x:Class="fitness_club.Windows.AuthorizationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock TextAlignment="Center" 
               Text="Добро пожаловать" 
               FontSize="20"
               FontWeight="Bold"
               Margin="0 50 0 0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock TextAlignment="Center"
               Margin="0 20 0 10"
               Text="Введите логин" 
               FontSize="18"        
               Width="190"
               Height="30"/>

            <TextBox   x:Name="loginTb"
               Margin="0 0 0 10"
               Width="190" 
               Height="30"/>

            <TextBlock TextAlignment="Center"
               Text="Введите пароль" 
               FontSize="18"        
               Width="190"
               Height="30"/>

            <TextBox   x:Name="passwordTb"
               Width="190" 
               Height="30"/>

            <Button x:Name="enterBtn"
            Content="Войти"
            Width="190" 
            Height="30"
            Margin="0 15 0 00"
            Click="enterBtn_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock TextAlignment="Center"
            Text="Нет аккаунта?" 
            FontSize="14"        
            Width="190"
            Margin="0 10 0 0"
            Height="20"/>

            <Button x:Name="registrationWinOpenBtn"
            Content="Зарегистрироваться"
            Width="160" 
            Height="20"
            Margin="0 5 0 00"
            Click="registrationWinOpenBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
