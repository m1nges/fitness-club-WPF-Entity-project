<Page x:Class="fitness_club.Pages.AdminPages.AdminMembershipManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="AdminMembershipManagementPage"
      Background="{StaticResource GlobalPageBackground}">

    <StackPanel Margin="20" Orientation="Vertical">

        <TextBlock Text="Управление абонементами" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 0 0 20"/>

        <DataGrid x:Name="MembershipGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0 0 0 20"
                  Height="300"
                  Background="White"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  BorderThickness="1"
                  BorderBrush="#8A2BE2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding MembershipName}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding MembershipTypeName}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding MembershipDescription}" Width="250"/>
                <DataGridTextColumn Header="Цена (₽)" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Длительность (мес)" Binding="{Binding DurationMonths}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Сохранить изменения" Width="200" Padding="8" Margin="0 0 0 20" Click="SaveChanges_Click"/>

        <Separator Margin="0 10"/>

        <Grid Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Новая абонемент -->
            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <TextBlock Text="Добавить абонемент" FontWeight="Bold" FontSize="18" Foreground="White" Margin="0 0 0 10"/>

                <TextBlock Text="Название:" Foreground="White"/>
                <TextBox x:Name="NewMembershipNameBox" Margin="0 5 0 10"/>

                <TextBlock Text="Описание:" Foreground="White"/>
                <TextBox x:Name="NewMembershipDescriptionBox" Margin="0 5 0 10"/>

                <TextBlock Text="Тип абонемента:" Foreground="White"/>
                <ComboBox x:Name="MembershipTypeComboBox" Margin="0 5 0 10"
                          DisplayMemberPath="MembershipTypeName"
                          SelectedValuePath="MembershipTypeId"/>

                <TextBlock Text="Цена:" Foreground="White"/>
                <TextBox x:Name="NewMembershipPriceBox" Margin="0 5 0 10"/>

                <Button Content="Добавить абонемент" Width="180" Padding="8" Click="AddMembership_Click"/>
            </StackPanel>

            <!-- Новый тип абонемента -->
            <StackPanel Grid.Column="1" Margin="10 0 0 0">
                <TextBlock Text="Добавить тип абонемента" FontWeight="Bold" FontSize="18" Foreground="White" Margin="0 0 0 10"/>

                <TextBlock Text="Название типа:" Foreground="White"/>
                <TextBox x:Name="NewMembershipTypeNameBox" Margin="0 5 0 10"/>

                <TextBlock Text="Длительность (мес):" Foreground="White"/>
                <TextBox x:Name="NewDurationBox" Margin="0 5 0 10"/>

                <Button Content="Добавить тип" Width="180" Padding="8" Click="AddMembershipType_Click"/>
            </StackPanel>
        </Grid>

    </StackPanel>
</Page>
