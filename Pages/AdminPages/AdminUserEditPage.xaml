<Page x:Class="fitness_club.Pages.AdminPages.AdminUserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:fitness_club.Pages.AdminPages"
      mc:Ignorable="d"
      Title="AdminUserEditPage"
      Background="white">
    <StackPanel Margin="20">
        <TextBlock Text="Редактирование пользователей" FontSize="22" FontWeight="Bold" Margin="0 0 0 15"/>

        <ComboBox x:Name="UserTypeComboBox" Width="200" Margin="0 0 0 15"
                  SelectionChanged="UserTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Клиенты" />
            <ComboBoxItem Content="Тренеры" />
        </ComboBox>

        <ListView x:Name="UserListView" Height="200" SelectionChanged="UserListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="300"/>
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Grid Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="FirstNameBox" Grid.Row="0" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="PatronymicBox" Grid.Row="2" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Серия паспорта:" Grid.Row="3" Grid.Column="0"/>
            <TextBox x:Name="PassportSeriesBox" Grid.Row="3" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Номер паспорта:" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="PassportNumberBox" Grid.Row="4" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Кем выдан паспорт:" Grid.Row="5" Grid.Column="0"/>
            <TextBox x:Name="PassportKemBox" Grid.Row="5" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Когда выдан паспорт:" Grid.Row="6" Grid.Column="0"/>
            <DatePicker x:Name="PassportDateBox" Grid.Row="6" Grid.Column="1" Margin="0 0 0 5"/>

            <TextBlock Text="Телефон:" Grid.Row="7" Grid.Column="0"/>
            <TextBox x:Name="PhoneBox" Grid.Row="7" Grid.Column="1" Margin="0 0 0 5"/>

            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" Visibility="Collapsed" x:Name="SpecializationPanel">
                <TextBlock Text="Специализация:" Margin="0 0 10 0"/>
                <ComboBox x:Name="SpecializationComboBox" Width="200"/>
            </StackPanel>
        </Grid>

        <Button Content="Сохранить изменения" Width="200" Padding="8" Margin="0 10 0 0"
                Click="SaveChanges_Click"/>
    </StackPanel>
</Page>
