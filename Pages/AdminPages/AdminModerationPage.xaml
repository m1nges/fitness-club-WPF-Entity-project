<Page x:Class="fitness_club.Pages.AdminPages.AdminModerationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminModerationPage"
      Background="white">

    <StackPanel Margin="20">

        <TextBlock Text="Модерация отзывов" FontSize="22" FontWeight="Bold" Margin="0 0 0 15"/>

        <ListView x:Name="ReviewsListView" MaxHeight="800" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0 0 0 10">
                        <StackPanel>
                            <TextBlock Text="{Binding ObjectName}" FontWeight="Bold" FontSize="16" />
                            <TextBlock Text="{Binding AuthorName}" FontStyle="Italic" Margin="0 5 0 0"/>
                            <TextBlock Text="{Binding ReviewContent}" TextWrapping="Wrap" Margin="0 5 0 0"/>
                            <TextBlock Text="{Binding Grade, StringFormat=Оценка: {0}}" Margin="0 5 0 0"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                                <Button Content="Одобрить" Margin="5 0" Padding="5 2" Click="ApproveReview_Click" Tag="{Binding}"/>
                                <Button Content="Отклонить" Margin="5 0" Padding="5 2" Click="RejectReview_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Page>
