<Page x:Class="fitness_club.Pages.AdminPages.AdminWorkSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminWorkSchedulePage"
      Background="white">

    <StackPanel Margin="20">
        <TextBlock Text="График работы тренеров" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Тренер:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox x:Name="TrainerComboBox" Width="200" DisplayMemberPath="FullName" SelectedValuePath="TrainerId"/>

            <TextBlock Text="Дата:" VerticalAlignment="Center" Margin="20 0 5 0"/>
            <DatePicker x:Name="WorkDatePicker"/>

            <TextBlock Text="С:" VerticalAlignment="Center" Margin="20 0 5 0"/>
            <TextBox x:Name="StartTimeBox" Width="60" ToolTip="Формат: HH:mm" />

            <TextBlock Text="До:" VerticalAlignment="Center" Margin="10 0 5 0"/>
            <TextBox x:Name="EndTimeBox" Width="60" ToolTip="Формат: HH:mm" />

            <Button Content="Добавить" Margin="20 0 0 0" Padding="6" Click="AddSchedule_Click"/>
        </StackPanel>

        <ListView x:Name="ScheduleListView" Margin="0 10 0 0" Height="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Тренер" DisplayMemberBinding="{Binding TrainerName}" Width="200"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}" Width="100"/>
                    <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding StartTime}" Width="80"/>
                    <GridViewColumn Header="Конец" DisplayMemberBinding="{Binding EndTime}" Width="80"/>
                    <GridViewColumn Header="Действия" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" Click="DeleteSchedule_Click" Tag="{Binding WorkScheduleId}" Padding="3"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>
