<Window x:Class="fitness_club.Pages.AdminPages.EditGroupClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Pages.AdminPages"
        mc:Ignorable="d"
        Title="EditGroupClassWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Тренер:" Width="80" VerticalAlignment="Center"/>
                <ComboBox x:Name="TrainerComboBox" Width="250" DisplayMemberPath="FullName" SelectedValuePath="TrainerId"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Дата:" Width="80" VerticalAlignment="Center"/>
                <DatePicker x:Name="DatePicker" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Начало:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="StartTimeBox" Width="80" ToolTip="формат: HH:mm"/>
                <TextBlock Text="  Конец:" Margin="10 0 5 0" VerticalAlignment="Center"/>
                <TextBox x:Name="EndTimeBox" Width="80" ToolTip="формат: HH:mm"/>
            </StackPanel>
        </StackPanel>

        <Button Content="Сохранить изменения" Grid.Row="1" Width="180" HorizontalAlignment="Right" Margin="0 15 0 0"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
