<Page x:Class="fitness_club.Pages.ClientPages.ClientTransactionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ClientTransactions"
      
      Background="White" d:DesignHeight="694.095" d:DesignWidth="790.58">
    <ScrollViewer>
        <StackPanel Margin="20">
        <TextBlock Text="История транзакций" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

        <ListView x:Name="TransactionsListView" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="0 0 0 10" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="{Binding OperationDescription}" FontSize="16" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                <TextBlock Text="Способ оплаты: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding PaymentWay}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Сумма: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding Amount, StringFormat={}{0} руб.}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Тип операции: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TransactionType}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TransactionDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
    </ScrollViewer>
</Page>
