<Page x:Class="fitness_club.Pages.ClientPages.ClientVisitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.ClientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="white"
      Title="ClientVisitsPage">

    <Grid>
        <TextBlock Text="Мои посещения тренировок" FontSize="20" FontWeight="Bold" Margin="10 10 0 20" />
        <ScrollViewer Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="850" Margin="20 45 20 30">
            <StackPanel>
                <ListView x:Name="ClientVisitsList" MouseDoubleClick="ClientVisitsList_MouseDoubleClick" SelectionMode="Single">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0 2"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Background="Transparent" Padding="0">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Вернуть средства" Click="RefundVisitContext_Click" CommandParameter="{Binding ClassId}" />
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="10">
                                        <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="14"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy} | '}"/>
                                            <TextBlock Text="{Binding Time, StringFormat='Время: {0} | '}"/>
                                            <TextBlock Text="{Binding HallName, StringFormat='Зал: {0}'}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding TrainerName, StringFormat='Тренер: {0}'}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10">
                                        <TextBlock Text="{Binding Visited, StringFormat='Посещено: {0}'}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0} руб.'}" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
