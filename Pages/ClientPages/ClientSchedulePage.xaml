<Page x:Class="fitness_club.Pages.ClientPages.ClientSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.ClientPages"
      mc:Ignorable="d"
      Background="white"
      Title="ClientSchedulePage"
      >
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Расписание" HorizontalAlignment="Center"
                       FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

            <!-- Индивидуальные занятия -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                <TextBlock Text="Мои индивидуальные занятия" FontWeight="Bold" Margin="0 0 0 5"/>

                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ListView x:Name="AuthorizedIndividualList" SelectionMode="Single" MouseDoubleClick="AuthorizedIndividualList_MouseDoubleClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0 2"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Background="Transparent" Padding="0">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Отменить запись" Click="CancelIndividualClassContext_Click"
                                                    CommandParameter="{Binding ClassId}" />
                                            <MenuItem Header="Подробнее" Click="IndividualClassDetailsContext_Click"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="10">
                                            <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="14"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy} | '}"/>
                                                <TextBlock Text="{Binding Time, StringFormat='Время: {0}'}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding TrainerName, StringFormat='Тренер: {0}'}" Margin="0,5,0,0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Duration}" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>

            <!-- Групповые занятия -->
            <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MinHeight="200" MaxHeight="300" Margin="5">
                <StackPanel>
                    <TextBlock Text="Мои групповые занятия" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ListView x:Name="AuthorizedGroupList" SelectionMode="Single" MouseDoubleClick="AuthorizedGroupList_MouseDoubleClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0 2"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Background="Transparent" Padding="0">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Отменить запись" Click="CancelGroupClassContext_Click"
                                                      CommandParameter="{Binding ClassId}" />
                                            <MenuItem Header="Подробнее" Click="GroupClassDetailsContext_Click"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="10">
                                            <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="14"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy} | '}"/>
                                                <TextBlock Text="{Binding Time, StringFormat='Время: {0} | '}"/>
                                                <TextBlock Text="{Binding HallName, StringFormat='Зал: {0}'}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding TrainerName, StringFormat='Тренер: {0}'}" Margin="0,5,0,0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Duration}" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Запись на индивидуальные -->
            <ScrollViewer Grid.Row="2" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MinHeight="200" Margin="5">
                <StackPanel>
                    <TextBlock Text="Запись на индивидуальные занятия" FontWeight="Bold" Margin="0 0 0 5"/>
                    <TextBlock Text="Длительность: " FontWeight="Bold" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DurationComboBox" Width="200" Margin="0 0 0 10" SelectionChanged="DurationComboBox_SelectionChanged">
                        <ComboBoxItem Content="1 час"/>
                        <ComboBoxItem Content="1.5 часа"/>
                        <ComboBoxItem Content="2 часа"/>
                    </ComboBox>
                    <TextBlock Text="Выберите тренера" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ComboBox x:Name="TrainerComboBox" DisplayMemberPath="FullName" SelectedValuePath="TrainerId" SelectionChanged="TrainerComboBox_SelectionChanged" Width="200" Margin="0 0 0 10"/>
                    <TextBlock Text="Свободное время:" FontWeight="Bold"/>
                    <ListBox x:Name="TimeSlotsListBox" Height="150" Margin="0 5 0 0"/>
                    <TextBlock x:Name="PriceTextBlock" FontWeight="Bold" Margin="0 5" Foreground="Green"/>
                    <Button Content="Записаться" Click="AuthorizedIndividual_Click" HorizontalAlignment="Center" Padding="10 5" Margin="0 10 0 0" Background="#013878" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0 5 0 0" VerticalAlignment="top">
                <TextBlock Text="Доступные групповые занятия" FontWeight="Bold" Margin="0 0 0 5"/>
            </StackPanel>
            <!-- Доступные групповые -->
            <ScrollViewer Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="400" Margin="0 45 0 45">
                <StackPanel>
                    <ListView x:Name="AvailableGroupList" SelectionMode="Single" MouseDoubleClick="AvailableGroupList_MouseDoubleClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0 2"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Background="Transparent" Padding="0">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Записаться" Click="SignUpGroupClassContext_Click"/>
                                            <MenuItem Header="Подробнее" Click="AvailableGroupDetailsContext_Click"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="10">
                                            <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="14"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy} | '}"/>
                                                <TextBlock Text="{Binding Time, StringFormat='Время: {0} | '}"/>
                                                <TextBlock Text="{Binding HallName, StringFormat='Зал: {0}'}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding TrainerName, StringFormat='Тренер: {0} | '}"/>
                                                <TextBlock Text="{Binding FreeSpots, StringFormat='Свободных мест: {0}'}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Price, StringFormat='{}{0} руб.'}" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical" VerticalAlignment="Bottom" Margin="0 0 0 5">
                <Button Content="Записаться" Click="AuthorizedGroup_Click" HorizontalAlignment="Center" Padding="10 5" Margin="0 10 0 0" Background="#013878" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
