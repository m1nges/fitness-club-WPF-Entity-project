<Window x:Class="fitness_club.Pages.ClientPages.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Pages.ClientPages"
        mc:Ignorable="d"
        d:Width="500"
        d:Height="250"
        Title="PaymentWindow" MaxHeight="250" MaxWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Выберите способ оплаты" FontSize="14" FontWeight="Bold" Margin="0 0 0 10"/>
            <RadioButton x:Name="cardRb" GroupName="payMethods" Content="Банковской картой" Margin="0 0 0 7" Checked="payMethods_Checked"/>
            <RadioButton x:Name="qrCodeRb" GroupName="payMethods" Content="QR-кодом" Checked="payMethods_Checked"/>
        </StackPanel>
        <StackPanel x:Name="payByCardSp" Grid.Column="1" Margin="0 10 0 0" Visibility="Collapsed">
            <TextBlock Text="Введите данные карты" FontSize="14" FontWeight="Bold" Margin="0 0 0 10"/>

            <!-- Номер карты -->
            <Grid Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Номер карты:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="cardNumberTb" Margin="5 0 0 0" MaxLength="19"/>
            </Grid>

            <!-- Срок действия -->
            <Grid Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Срок действия:" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5 0 0 0">
                    <TextBox x:Name="expiryDateMonthTb" MinWidth="25" MaxLength="2"/>
                    <TextBlock Text="/" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    <TextBox x:Name="expiryDateYearTb" MinWidth="25" Margin="5 0 0 0" MaxLength="2"/>
                </StackPanel>
            </Grid>

            <!-- CVV/CVC -->
            <Grid Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="CVV/CVC:" VerticalAlignment="Center"/>
                <TextBox MaxLength="3" Grid.Column="1" x:Name="cvvTb" Margin="5 0 0 0"/>
            </Grid>
            </StackPanel>

            <StackPanel x:Name="payByQRCodeSp" Grid.Column="1" Margin="0 10 0 0" Visibility="Collapsed">
            <StackPanel Height="auto" HorizontalAlignment="Center" Orientation="Horizontal">
                <Image x:Name="QrCodeImage" Width="150" Height="150"/>
                <Button Content="🔄" Click="GenerateQr_Click" Width="24" FontSize="16" Background="Transparent" Height="24" BorderThickness="0" Margin="10 0 0 0"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Column="1" x:Name="payBtn" Content="Я оплатил сумма" Click="payBtn_Click" Width="120" Height="20" VerticalAlignment="Bottom" Margin="0 15 0 40" Visibility="Collapsed"/>
    </Grid>
</Window>
