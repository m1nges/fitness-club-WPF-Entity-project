<Window x:Class="fitness_club.Pages.ClientPages.ClassDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Pages.ClientPages"
        mc:Ignorable="d"
        Title="ClassDetailsWindow"
        MaxHeight="900"
        MaxWidth="1000"
        d:Width="800"
        d:Height="600">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Ваш тренер: " FontSize="16" FontWeight="Bold" x:Name="fullNameOfTrainerTb" Margin="10 0 10 0"/>
            <Image x:Name="trainerPhoto" Width="150" Height="200" Stretch="Fill" Margin="10 15 10 0"/>
            <TextBlock Text="Специализация тренера:" x:Name="trainerSpecializationTb" FontSize="14" Margin="10 15 10 0"/>
            <TextBlock Text="Стаж работы тренера:" x:Name="trainerExperienceTb" FontSize="14" Margin="10 15 10 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Название занятия: " FontSize="16" FontWeight="Bold" x:Name="classNameTb" Margin="10 0 10 0"/>
            <TextBlock Text="Описание занятия:" x:Name="classDescriptionTb" FontSize="14" Margin="10 15 10 0"/>
            <TextBlock Text="Дата и время занятия:" x:Name="classDateTimeTb" FontSize="14" Margin="10 15 10 0"/>
            <TextBlock Text="Количество посетителей:" x:Name="classVisitorNumTb" FontSize="14" Margin="10 15 10 0"/>
            <TextBlock Text="Количество свободных мест:" x:Name="classFreeSpotsTb" FontSize="14" Margin="10 15 10 0"/>
            <TextBlock Text="Зал:" x:Name="hallNameTb" FontSize="14" Margin="10 10 10 0"/>
            <Border Background="#DDD" Margin="10 15 10 0" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <StackPanel>
                        <TextBlock x:Name="NoEquipmentTextBlock" 
                                   Text="Оборудование в зале отсутствует"
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"/>

                        <ListView x:Name="EquipmentListView" Margin="0 5 0 0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                        <TextBlock Text="{Binding EquipmentName, StringFormat={} Наименование: {0} | }"/>
                                        <TextBlock Text=" Состояние: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding EquipmentConditionDescription}"/>
                                        <TextBlock Text=" Количество: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Quantity}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <StackPanel x:Name="sendReviewSP">
                <TextBlock x:Name="reviewsBlockTb" Text="Оставьте свой отзыв на занятие" FontSize="14" Margin="10 30 0 0"/>
                <TextBox TextChanged="reviewTextBox_TextChanged" x:Name="reviewTextBox" Margin="10 15 10 0" Height="50" VerticalScrollBarVisibility="Auto"/>
                <StackPanel Margin="10 10 0 0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" x:Name="StarPanel">
                        <Path Name="Star1" Tag="1" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"
          Data="M10,1 L12,7 H18 L13,11 L15,17 L10,13 L5,17 L7,11 L2,7 H8 Z"
          Width="20" Height="20" Fill="Gray" Margin="5"/>
                        <Path Name="Star2" Tag="2" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"
          Data="M10,1 L12,7 H18 L13,11 L15,17 L10,13 L5,17 L7,11 L2,7 H8 Z"
          Width="20" Height="20" Fill="Gray" Margin="5"/>
                        <Path Name="Star3" Tag="3" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"
          Data="M10,1 L12,7 H18 L13,11 L15,17 L10,13 L5,17 L7,11 L2,7 H8 Z"
          Width="20" Height="20" Fill="Gray" Margin="5"/>
                        <Path Name="Star4" Tag="4" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"
          Data="M10,1 L12,7 H18 L13,11 L15,17 L10,13 L5,17 L7,11 L2,7 H8 Z"
          Width="20" Height="20" Fill="Gray" Margin="5"/>
                        <Path Name="Star5" Tag="5" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave" MouseLeftButtonDown="Star_MouseLeftButtonDown"
          Data="M10,1 L12,7 H18 L13,11 L15,17 L10,13 L5,17 L7,11 L2,7 H8 Z"
          Width="20" Height="20" Fill="Gray" Margin="5"/>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="submitReviewButton" Content="Отправить отзыв" Margin="10 15 0 0" Width="150" Click="SubmitReviewButton_Click"/>
            </StackPanel>
            <StackPanel x:Name="reviewsSP">
                <TextBlock Text="Отзывы клиентов на занятие" FontSize="14" Margin="10 30 0 0"/>
                <TextBlock x:Name="avgClassRating" Text="Средняя оценка занятия" FontSize="14" Margin="10 0 0 0"/>
                <Border Background="#DDD" Margin="10 15 10 10" Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <StackPanel>
                            <ListView x:Name="reviewsListView" Margin="0 5 0 0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                            <TextBlock Text="{Binding ClientName, StringFormat={} Автор: {0} | }"/>
                                            <TextBlock Text=" Отзыв: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ReviewContent}"/>
                                            <TextBlock Text=" Оценка: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ReviewGrade}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>