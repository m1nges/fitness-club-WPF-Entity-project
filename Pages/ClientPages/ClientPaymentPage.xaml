<Page x:Class="fitness_club.Pages.ClientPages.ClientPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.ClientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="white"
      Title="Страница оплаты">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Страница оплаты" 
           FontSize="24" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Margin="0,0,0,0" 
           FontWeight="Bold"/>
        
        <!--Услуги к оплате-->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10" Width="Auto">
            <TextBlock x:Name="servicesToBeProceedTb" Text="Услуги к оплате" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <ListView x:Name="unPayedServicesList"
                    MaxHeight="300"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    HorizontalContentAlignment="Stretch"
                    Margin="0 0 0 10"
                    SelectionMode="Single">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0 2"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="blue"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" MaxWidth="500">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding ServiceName}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding ServiceType, StringFormat='Тип услуги: {0}'}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description, StringFormat='Описание: {0}'}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding ProvisionDate, StringFormat='Дата оказания услуги: {0:dd.MM.yyyy}'}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button x:Name="payService" Click="payService_Click" Width="90">
                                        <TextBlock Text="{Binding Price, StringFormat = 'К оплате: {0}'}" Margin="0,2,0,0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="payForAllServicesDebts" Click="payForAllServicesDebts_Click" Content="Оплатить все" Width="150">
            </Button>
        </StackPanel>
        
        <!--Абонементы к оплате-->
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10" Width="Auto">
            <TextBlock x:Name="membershipsToBeProceedTb" Text="Абонементы к оплате" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <ListView x:Name="unPayedMembershipList"
            MaxHeight="300"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            HorizontalContentAlignment="Stretch"
            Margin="0 0 0 10"
            SelectionMode="Single">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0 2"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="blue"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" MaxWidth="500">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding MembershipName}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding MembershipTypeName, StringFormat='Тип услуги: {0}'}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding StartDate, StringFormat='Дата начала: {0:dd.MM.yyyy}'}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding EndDate, StringFormat='Дата окончания: {0:dd.MM.yyyy}'}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button x:Name="payMembership" Click="payMembership_Click" Width="90">
                                        <TextBlock Text="{Binding Price, StringFormat = 'К оплате: {0}'}" Margin="0,2,0,0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="payForAllMembershipDebts" Click="payForAllMembershipDebts_Click" Content="Оплатить все" Width="150">
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="2" Margin="10">
            <TextBlock x:Name="classTitle" Text="Занятия к оплате" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

            <ListView x:Name="unPayedClassList" 
                    MaxHeight="300"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    HorizontalContentAlignment="Stretch"
                    Margin="0 0 0 10"
                    SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding ClassName}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description, StringFormat='Описание: {0}'}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding TrainerName, StringFormat='Тренер: {0}'}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}"  TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding StartTime, StringFormat='Время: {0:hh\\:mm}'}" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button Content="{Binding Price, StringFormat='К оплате: {0}₽'}"
                                    Click="payClass_Click"
                                    Tag="{Binding ClassId}" Width="100"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="payAllClassesBtn" Click="payAllClassesBtn_Click" Content="Оплатить все занятия" Width="150"/>
        </StackPanel>


        <StackPanel x:Name="lockerPaymentPanelWrap" Grid.Column="1" Grid.Row="2" Margin="10" Width="Auto">
            <TextBlock x:Name="lockerTitle" Text="Шкафчик к оплате" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <StackPanel x:Name="lockerPaymentPanel" Margin="10" Width="Auto">

                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" MaxWidth="500">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="{Binding LockerId, StringFormat='Номер ячейки: {0}'}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding LockerZone, StringFormat='Зона: {0}'}" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding StartDate, StringFormat='С: {0:dd.MM.yyyy}'}" />
                            <TextBlock Text="{Binding EndDate, StringFormat='По: {0:dd.MM.yyyy}'}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button x:Name="payLockerBtn" Click="payLockerBtn_Click" Width="90">
                                <TextBlock Text="{Binding RentPrice, StringFormat='К оплате: {0}₽'}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
