<Page x:Class="fitness_club.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage"
      Background="white">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <Button Content="Управление графиком работы" Margin="10 20 10 10" Click="Workschedule_Click"/>
                <Button Content="Распределение оборудования по залам" Margin="10 0 10 10" Click="HallEquipment_Click"/>
                <Button Content="Создание групповых занятий" Margin="10 0 10 10" Click="CreateGroupClassesPage_Click"/>
                <Button Content="Модерация отзывов" Margin="10 0 10 10" Click="ReviewModeration_Click"/>
                <Button Content="Управление пользователями" Margin="10 0 10 10" Click="ManageUsers_Click"/>
                <Button Content="Управление услугами" Margin="10 0 10 10" Click="ManageServices_Click"/>
                <Button Content="Управление абонементами" Margin="10 0 10 10" Click="ManageMemberships_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Bottom">
                <StackPanel  Orientation="Horizontal" VerticalAlignment="Top">
                    <Image Source="../Images/user.png" Width="24" Height="24" Margin="5 0 0 0"/>
                    <TextBlock x:Name="userName" Text="Admin" TextAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="center">
                    <Button Background="Transparent" Width="34" Height="34" BorderThickness="0" x:Name="logoutBtn" Click="logoutBtn_Click"  VerticalAlignment="Bottom" Margin="10 0 10 0">
                        <Image Source="../Images/logout.png" Width="32" Height="32"/>
                    </Button>
                    <Button Background="Transparent" Width="34" Height="34" BorderThickness="0" x:Name="exitBtn" Click="exitBtn_Click"  VerticalAlignment="Bottom" Margin="10 0 10 0">
                        <Image Source="../Images/exit.png" Width="32" Height="32"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Frame x:Name="AdminFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
