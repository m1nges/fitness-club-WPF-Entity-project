<Page x:Class="fitness_club.Pages.TrainerPages.TrainerPastClassesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.TrainerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainerPastClassesPage"
      Background="white">
    
    <ScrollViewer HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="10">
            <TextBlock Text="Проведенные занятия" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

            <ComboBox x:Name="FilterComboBox" SelectionChanged="FilterComboBox_SelectionChanged"
              Width="200" Margin="0 0 0 10">
                <ComboBoxItem Content="Все"/>
                <ComboBoxItem Content="Только отмеченные"/>
                <ComboBoxItem Content="Только неотмеченные"/>
            </ComboBox>

            <ListView x:Name="PastClassesListView" MouseDoubleClick="PastClassesListView_MouseDoubleClick" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="8" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding ClassName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}"/>
                                <TextBlock Text="{Binding StartTime, StringFormat='Начало: {0:hh\\:mm}'}"/>
                                <TextBlock Text="{Binding EndTime, StringFormat='Конец: {0:hh\\:mm}'}"/>
                                <TextBlock Text="{Binding HallName, StringFormat='Зал: {0}'}"/>
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} руб.'}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
