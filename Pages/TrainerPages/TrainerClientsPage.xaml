<Page x:Class="fitness_club.Pages.TrainerPages.TrainerClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.TrainerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainerClientsPage"
      Background="white">

    <StackPanel Margin="10">
        <TextBlock Text="Мои клиенты (индивидуальные занятия)" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
        <ListView x:Name="ClientsListView" MouseDoubleClick="ClientsListView_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,4">
                        <TextBlock Text="{Binding FullName}" FontSize="16"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
