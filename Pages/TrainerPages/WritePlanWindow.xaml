<Window x:Class="fitness_club.Pages.TrainerPages.WritePlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitness_club.Pages.TrainerPages"
        mc:Ignorable="d"
        Title="WritePlanWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="headerTb" Text="Введите индивидуальный план тренировок:"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBox x:Name="PlanTextBox"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14" />

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" Width="120" Margin="0,0,10,0"
                    Padding="6" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Padding="6"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
