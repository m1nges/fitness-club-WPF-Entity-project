<Page x:Class="fitness_club.Pages.TrainerPages.ClassVisitorsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.TrainerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClassVisitorsListPage"
      Background="White">

    <StackPanel Margin="10" Orientation="Vertical">
        <TextBlock Text="Участники занятия" 
                   x:Name="classNameTb"
                   FontSize="20" FontWeight="Bold" 
                   DockPanel.Dock="Top" Margin="0,0,0,10"/>

        <DataGrid x:Name="VisitorsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  RowHeight="20"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" 
                                    Binding="{Binding FullName}"
                                    Width="*"
                                    IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Пришел" 
                                        Binding="{Binding Visited, Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Сохранить" 
                Click="SaveButton_Click"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Width="120" Padding="5"
                Margin="0 20 0 0"/>
        
        <Button Content="Назад" 
        Click="BackButton_Click"
        VerticalAlignment="Bottom" 
        HorizontalAlignment="Center"
        Width="120" Padding="5"
        Margin="0 20 0 0"/>
    </StackPanel>
</Page>
