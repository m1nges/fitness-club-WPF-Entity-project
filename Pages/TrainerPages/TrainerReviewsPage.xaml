<Page x:Class="fitness_club.Pages.TrainerPages.TrainerReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness_club.Pages.TrainerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainerReviewsPage"
      Background="white">

    <Grid>
        <StackPanel x:Name="reviewsSP" Margin="0 0 0 0">
            <TextBlock Text="Отзывы клиентов о вас" FontSize="24" FontWeight="bold" Margin="10 0 0 0"/>
            <TextBlock x:Name="avgTrainerRating" Text="Ваша средняя оценка: " FontSize="24" FontWeight="bold" Margin="10 20 0 0"/>
            <Border Background="#DDD" Margin="10 15 10 10" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <StackPanel>
                        <ListView x:Name="reviewsListView" Margin="0 5 0 0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                        <TextBlock Text="{Binding ClientName, StringFormat={}Автор: {0} | }"/>
                                        <TextBlock Text=" Отзыв: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding ReviewContent}"/>
                                        <TextBlock Text=" Оценка: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding ReviewGrade}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>
</Page>
